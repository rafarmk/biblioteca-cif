        }

        [data-theme="premium"] .btn-secondary:hover {
            background: rgba(56, 189, 248, 0.1);
            border-color: #60a5fa;
            color: #60a5fa;
            box-shadow: 0 0 30px rgba(56, 189, 248, 0.4);
        }

        /* Features Section */
        .features {
            padding: 100px 20px;
            background: var(--bg-secondary);
            min-height: auto;
            position: relative;
            z-index: 2;
        }

        .features-container {
            max-width: 1400px;
            margin: 0 auto;
        }

        .features h2 {
            text-align: center;
            font-size: 2.8rem;
            color: var(--text-primary);
            margin-bottom: 20px;
            position: relative;
            display: inline-block;
            left: 50%;
            transform: translateX(-50%);
        }

        [data-theme="premium"] .features h2 {
            background: linear-gradient(135deg, #c9d1d9 0%, #38bdf8 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .features h2::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 4px;
            background: var(--primary);
            border-radius: 2px;
        }

        [data-theme="premium"] .features h2::after {
            background: linear-gradient(90deg, #38bdf8 0%, #0ea5e9 100%);
            box-shadow: 0 0 20px rgba(56, 189, 248, 0.5);
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 40px;
            margin-top: 80px;
            padding: 0 20px;
        }

        .feature-card {
            background: var(--bg-card);
            padding: 40px 30px;
            border-radius: 20px;
            box-shadow: 0 10px 40px var(--shadow);
            transition: var(--transition);
            position: relative;
            overflow: hidden;
            border: 1px solid var(--border-color);
            display: flex;
            flex-direction: column;
            min-height: 280px;
        }

        [data-theme="premium"] .feature-card {
            background: linear-gradient(135deg, #1e2533 0%, #2a3441 100%);
            border-color: rgba(56, 189, 248, 0.2);
            box-shadow: 0 10px 40px rgba(56, 189, 248, 0.15), 0 0 60px rgba(56, 189, 248, 0.05);
        }

        .feature-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
            transition: left 15s ease;
        }

        [data-theme="premium"] .feature-card::before {
            background: linear-gradient(90deg, transparent, rgba(56, 189, 248, 0.15), transparent);
        }

        .feature-card:hover::before {
            left: 100%;
        }

        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 50px var(--shadow);
            border-color: var(--primary);
        }

        [data-theme="premium"] .feature-card:hover {
            box-shadow: 0 15px 50px rgba(56, 189, 248, 0.25), 0 0 80px rgba(56, 189, 248, 0.1);
            border-color: #38bdf8;
        }

        .feature-icon {
            font-size: 50px;
            color: var(--primary);
            margin-bottom: 25px;
            display: inline-block;
            transition: transform 15s ease;
        }

        [data-theme="premium"] .feature-icon {
            filter: drop-shadow(0 0 20px rgba(56, 189, 248, 0.5));
        }

        .feature-card:hover .feature-icon {
            transform: scale(1.2) rotate(360deg);
        }

        .feature-card h3 {
            font-size: 1.6rem;
            color: var(--text-primary);
            margin-bottom: 15px;
            font-weight: 600;
        }

        .feature-card p {
            color: var(--text-secondary);
            line-height: 1.8;
            font-size: 1rem;
            flex-grow: 1;
        }

        /* Footer */
        .footer {
            background: var(--bg-card);
            padding: 30px 20px;
            text-align: center;
            border-top: 1px solid var(--border-color);
            position: relative;
            z-index: 2;
        }

        [data-theme="premium"] .footer {
            background: linear-gradient(135deg, #1e2533 0%, #2a3441 100%);
            border-top-color: rgba(56, 189, 248, 0.2);
        }

        .footer p {
            color: var(--text-secondary);
            font-size: 0.95rem;
        }

        /* Responsive Design */
        @media (max-width: 1200px) {
            .features-grid {
                grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
                gap: 30px;
            }
        }

        @media (max-width: 768px) {
            .hero h1 {
                font-size: 2.5rem;
            }

            .hero p {
                font-size: 1.1rem;
            }

            .features h2 {
                font-size: 2.2rem;
            }

            .features-grid {
                grid-template-columns: 1fr;
                gap: 25px;
            }

            .hero-buttons {
                flex-direction: column;
                width: 100%;
                max-width: 300px;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }

            .theme-toggle-text {
                display: none;
            }

            .theme-toggle {
                padding: 12px;
            }
        }

        @media (max-width: 480px) {
            .hero {
                padding: 60px 15px;
            }

            .hero h1 {
                font-size: 2rem;
            }

            .hero p {
                font-size: 1rem;
            }

            .features {
                padding: 60px 15px;
            }

            .features h2 {
                font-size: 1.8rem;
            }

            .feature-card {
                padding: 30px 20px;
            }
        }
    </style>
</head>
