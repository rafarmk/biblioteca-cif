/* ===================================================================
   TEMAS PROFESIONALES OSCUROS
   =================================================================== */

/* Tema Dark Professional (Por defecto) */
:root[data-theme="dark"], 
:root:not([data-theme]) {
    --bg-primary: #0f172a;
    --bg-secondary: #1e293b;
    --bg-tertiary: #334155;
    --text-primary: #f1f5f9;
    --text-secondary: #94a3b8;
    --accent-primary: #3b82f6;
    --accent-secondary: #2563eb;
    --border-color: rgba(59, 130, 246, 0.2);
    --shadow-color: rgba(0, 0, 0, 0.3);
    --glow-color: #3b82f6;
}

/* Tema Midnight Blue */
:root[data-theme="midnight"] {
    --bg-primary: #0a0e27;
    --bg-secondary: #151b3d;
    --bg-tertiary: #1e2749;
    --text-primary: #e2e8f0;
    --text-secondary: #94a3b8;
    --accent-primary: #6366f1;
    --accent-secondary: #4f46e5;
    --border-color: rgba(99, 102, 241, 0.2);
    --shadow-color: rgba(0, 0, 0, 0.4);
    --glow-color: #6366f1;
}

/* Tema Carbon */
:root[data-theme="carbon"] {
    --bg-primary: #121212;
    --bg-secondary: #1e1e1e;
    --bg-tertiary: #2d2d2d;
    --text-primary: #ffffff;
    --text-secondary: #b3b3b3;
    --accent-primary: #00d4ff;
    --accent-secondary: #00b8d4;
    --border-color: rgba(0, 212, 255, 0.2);
    --shadow-color: rgba(0, 0, 0, 0.5);
    --glow-color: #00d4ff;
}

/* ===================================================================
   ESTILOS BASE
   =================================================================== */

body {
    background-color: var(--bg-primary);
    color: var(--text-primary);
    transition: all 0.3s ease;
    padding-top: 80px;
    margin: 0;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    min-height: 100vh;
}

/* ===================================================================
   NAVBAR
   =================================================================== */

.main-navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background-color: var(--bg-secondary);
    border-bottom: 2px solid var(--border-color);
    z-index: 1000;
    box-shadow: 0 2px 10px var(--shadow-color);
}

.navbar-container {
    max-width: 1600px;
    margin: 0 auto;
    padding: 15px 30px;
    display: flex;
    align-items: center;
    gap: 30px;
}

.navbar-brand {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 24px;
    font-weight: 700;
    color: var(--text-primary);
    margin-right: auto;
}

.navbar-menu {
    display: flex;
    align-items: center;
    gap: 5px;
    order: 1;
}

.navbar-user {
    display: flex;
    align-items: center;
    gap: 20px;
    order: 3;
    margin-left: auto;
}

.nav-item {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px 16px;
    border-radius: 8px;
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    transition: all 0.3s ease;
    position: relative;
}

.nav-item::before {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 0;
    height: 2px;
    background: var(--accent-primary);
    transform: translateX(-50%);
    transition: width 0.3s ease;
}

.nav-item:hover::before {
    width: 80%;
}

.nav-item:hover {
    background-color: rgba(59, 130, 246, 0.1);
    color: var(--accent-primary);
    transform: translateY(-2px);
}

.nav-item.active {
    background-color: rgba(59, 130, 246, 0.2);
    color: var(--accent-primary);
    box-shadow: 0 0 15px var(--glow-color);
}

.badge-alert {
    position: absolute;
    top: 5px;
    right: 5px;
    background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
    color: white;
    font-size: 11px;
    font-weight: 700;
    padding: 3px 7px;
    border-radius: 12px;
    animation: pulse-glow 2s infinite;
    box-shadow: 0 0 10px #ef4444;
}

@keyframes pulse-glow {
    0%, 100% { 
        transform: scale(1);
        box-shadow: 0 0 10px #ef4444;
    }
    50% { 
        transform: scale(1.1);
        box-shadow: 0 0 20px #ef4444;
    }
}

/* ===================================================================
   SELECTOR DE TEMAS
   =================================================================== */

.theme-selector-wrapper {
    position: relative;
    display: inline-block;
}

.theme-toggle-btn {
    background: linear-gradient(135deg, var(--accent-primary) 0%, var(--accent-secondary) 100%);
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 8px;
    cursor: pointer;
    font-size: 14px;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 8px;
    transition: all 0.3s ease;
}

.theme-toggle-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px var(--shadow-color);
}

.theme-dropdown {
    position: absolute;
    top: calc(100% + 8px);
    right: 0;
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    padding: 12px;
    min-width: 220px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
    z-index: 9999;
    display: none;
    opacity: 0;
    transform: translateY(-10px);
    transition: all 0.3s ease;
}

.theme-dropdown.active {
    display: block;
    opacity: 1;
    transform: translateY(0);
}

.theme-dropdown-title {
    color: var(--text-secondary);
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 10px;
    padding: 0 8px;
}

.theme-option {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-bottom: 4px;
}

.theme-option:hover {
    background: rgba(59, 130, 246, 0.1);
    transform: translateX(5px);
}

.theme-option.active {
    background: rgba(59, 130, 246, 0.2);
    border-left: 3px solid var(--accent-primary);
}

.theme-color-preview {
    width: 36px;
    height: 36px;
    border-radius: 8px;
    border: 2px solid var(--border-color);
}

.theme-name {
    color: var(--text-primary);
    font-size: 14px;
    font-weight: 500;
}

.theme-check {
    margin-left: auto;
    color: var(--accent-primary);
    font-size: 18px;
}

/* ===================================================================
   RESPONSIVE
   =================================================================== */

@media (max-width: 1200px) {
    .nav-item span:not(.badge-alert) {
        display: none;
    }
}

@media (max-width: 768px) {
    body {
        padding-top: 120px;
    }
    .navbar-container {
        flex-wrap: wrap;
    }
    .navbar-menu {
        order: 3;
        width: 100%;
        justify-content: space-around;
    }
}